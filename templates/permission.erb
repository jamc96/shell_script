#!/bin/bash
# File managed by puppet

# default variables
OWNER=<%= @owner %>
GROUP=<%= @group %>
MODE=<%= @mode %>
<% unless @path.empty? -%>
# validate user and group
if [[ -n "$OWNER" && -n "$GROUP" ]]; then 
    if [[ $(getent group $GROUP) &&  $(getent passwd $OWNER) ]]; then
    <% @path.each do |value| -%>
        chown -R $OWNER:$GROUP <%= value %>
    <% end -%>
    fi
fi
if [[ -n "$MODE" ]]; then
    <% @path.each do |value| -%>
    chmod -R $MODE <%= value %>
    <% end -%>
fi
<% end -%>
